<table>
  <thead>
  <tr>
  
  <th>Title</th>
  
  <th>Image</th>
  
  <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @images.each do |img| %>
  
  <tr>
  
  <td><%= img.title %></td>
  
  <td><%= link_to image_tag(img.image.thumb("100x100").url), img.image.url %></td>
  
  <td><%= link_to "Show", img %></td>
  
  <td><%= link_to "Edit", edit_image_path(img) %></td>
  
  <td><%= link_to "Destroy", photo, method: :delete, data: { confirm: "Are you sure?" } %></td>
  
  </tr>
  <% end %>
  </tbody></table>